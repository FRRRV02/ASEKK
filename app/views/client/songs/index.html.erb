<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Songs" %>

  <div class="flex justify-between items-center mb-5">
    <h1 class="font-bold text-4xl">Songs</h1>
  </div>

  <table class="min-w-full mt-5">
    <thead>
      <tr>
        <th class="px-4 py-2 bg-cyan-500 text-left">Title</th>
        <th class="px-4 py-2 bg-cyan-500 text-left">Artist</th>
        <th class="px-4 py-2 bg-cyan-500 text-left">Composer</th>
        <th class="px-4 py-2 bg-cyan-500 text-left">Producer</th>
        <th class="px-4 py-2 bg-cyan-500 text-left">Release</th>
      </tr>
    </thead>
    <tbody>
      <% @songs.each do |song| %>
        <tr class="cursor-pointer hover:bg-cyan-500" onclick="window.location='<%= client_song_path(song) %>'">
          <td class="border px-4 py-2"><%= song.title %></td>
          
          <td class="border px-4 py-2"><% song.artist.each do |artist| %>
          <%= artist.name%>
          <% end %>
          </td>
          <td class="border px-4 py-2"><%= song.composer %></td>
          <td class="border px-4 py-2"><%= song.producer %></td>
          <td class="border px-4 py-2"><%= song.release %></td>
           
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
