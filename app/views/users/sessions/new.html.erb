<h2>Login</h2>

<%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |form| %>
  <div class="form-group">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= form.check_box :remember_me, class: 'form-check-input' %>
      <%= form.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

